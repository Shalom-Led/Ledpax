<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_related_view_tree" model="ir.ui.view">
        <field name="name">product.related.tree</field>
        <field name="model">product.related</field>
        <field name="arch" type="xml">
            <tree string="Variant Values" editable="top">
                    <field name="name"/>
                    <field name="cost"/>
                    <field name="product_type"/>
                </tree>
        </field>
    </record>

    <record id="product_related_action1" model="ir.actions.act_window">
        <field name="name">Products Related</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.related</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
    </record>

    <menuitem action="product_related_action1" id="product_related_menu" parent="sale.prod_config_main" groups="product.group_product_variant"/>

</odoo>
