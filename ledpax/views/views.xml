<?xml version="1.0" encoding="UTF-8"?>
    <odoo>
        <record id="mrp_bom_tree_view_inherit_form"  model="ir.ui.view">
            <field name="name">mrp.bom.custom</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='product_tmpl_id']" position='replace'>
                    <field name="prod_name"/>
                    <field name="prod_description1"/>
<!--                    <field name="uom1"/>-->
                </xpath>
                <xpath expr="//tree/field[@name='product_id']" position='replace'>
                </xpath>
                <xpath expr="//tree/field[@name='code']" position='replace'>
                </xpath>

            </field>
        </record>
        <record id="view_mrp_bom_filter_inherit_form"  model="ir.ui.view">
            <field name="name">mrp.bom.custom</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.view_mrp_bom_filter"/>
            <field name="arch" type="xml">
                    <xpath expr="//search/field[@name='code']" position='replace'>
                        <field name="code" string="All" filter_domain="['|',('prod_name','ilike',self),('prod_description1','ilike',self)]"/>
                        <field name="prod_description1" string="Product Description"/>
                        <field name="prod_name" string="Begin with Name" filter_domain="[('prod_name', '=ilike', str(self)+'%')]"/>
                        <field name="prod_description1" string="Begin with Description" filter_domain="[('prod_description1', '=ilike', str(self)+'%')]"/>
                        <filter string="Created Date" name="create_date" date="create_date"/>
                    </xpath>
            </field>
        </record>
<!--    manufacturing order view create date filter-->
        <record id="view_mrp_production_filter_inherit_form"  model="ir.ui.view">
            <field name="name">mrp.production.custom</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
            <field name="arch" type="xml">
                    <xpath expr="//search/field[@name='name']" position='replace'>
                        <field name="name" string="All" filter_domain="['|','|','|',('project_so','ilike',self),('name','ilike',self),('origin','ilike',self),('product_id','ilike',self)]"/>
                        <field name="project_so" string="Project" filter_domain="[('project_so', '=ilike', str(self)+'%')]"/>
                        <filter string="Created Date" name="create_date" date="create_date"/>
                    </xpath>
            </field>
        </record>
        <record id="mrp_production_form_view_inherit_form"  model="ir.ui.view">
            <field name="name">mrp.productionform.custom</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position='after'>
                    <field name="project_so" attrs="{'invisible': [('project_so','=',False)]}"/>
                </xpath>
            </field>
        </record>
        <record id="mrp_production_tree_view_inherit_form"  model="ir.ui.view">
            <field name="name">mrp.mrp_production_tree_view.custom</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position='after'>
                    <field name="project_so"/>
                </xpath>
            </field>
        </record>
    <!--    manufacturing unbuild order view create date filter-->
        <record id="mrp_unbuild_search_view_inherit_form"  model="ir.ui.view">
