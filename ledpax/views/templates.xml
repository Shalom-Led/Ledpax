                            </TR>
                        </TABLE>                        <div class="page">
                        <div class="oe_structure"/>
                        <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>
                        <br />
                        <table class="table table-sm o_main_table" style="table-layout:fixed;width:100%;">
                            <thead style="background-color: #dddddd">
                                <tr>
                                    <!-- TODO: remove in master -->
                                    <t t-set="colspan" t-value="5"/>
                                    <th class="text-left" style="width:15%; font-size: 12px;">Type</th>
                                    <th class="text-left" style="width:20%; font-size: 12px;">Name</th>
                                    <th class="text-left" style="width:35%; font-size: 12px;">Product Description</th>
                                    <th class="text-right" style="width:10%;font-size: 12px;">Quantity</th>
                                    <th class="text-right" style="width:10%; font-size: 12px;">Price</th>
                                    <th class="text-right" style="width:10%; font-size: 12px;">Sum</th>

                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-foreach="doc.order_line" t-as="line">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type">
                                            <td style="font-size: 12px;">
                                                <span t-field="line.type"/>
                                            </td>
                                            <td class="text-left" style="font-size: 12px;">
                                                <t t-esc="line.product_id.name[0:39] if line.product_id.name else ''"/>
                                            </td>
                                            <!--<td class="text-left" style="font-size: 11px;">
                                             <span t-field="line.product_id.product_tmpl_id.p_description"/>
                                             </td> -->
                                            <td class="text-left" style="font-size: 12px;">
                                                <!--                                                    <span t-field="line.product_id.product_tmpl_id.prod_description"/>-->
                                                <t t-esc="line.product_id.product_tmpl_id.prod_description[0:79] if line.product_id.product_tmpl_id.prod_description else ''"/>
                                            </td>
                                            <td class="text-right" style="font-size: 12px;">
                                                <span t-field="line.product_uom_qty"/>
                                                <span t-field="line.product_uom" groups="uom.group_uom"/>
                                            </td>
                                            <td class="text-right" style="font-size: 12px;">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td t-if="display_discount" class="text-center" style="font-size: 12px;" groups="sale.group_discount_per_so_line">
                                                <span t-field="line.discount"/>
                                            </td>

                                            <td class="text-right o_price_total" style="font-size: 12px;">
                                                <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td name="td_section_line" colspan="99" style="text-overflow: ellipsis; font-size: 12px; max-width: 200px;">
                                                <span t-field="line.name"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td  name="td_note_line" colspan="99" style="text-overflow: ellipsis; font-size: 12px; max-width: 200px;">
                                                <span t-field="line.name"/>
                                            </td>
                                        </t>

                                    </tr>
                                    <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span
                                                        t-esc="current_subtotal"
                                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                                />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                        <div class="clearfix">
                            <div id="total" class="row" name="total">
                                <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                    <table class="table table-sm">
                                        <tr style="">
                                            <td style="font-size: 12px;"><strong>Subtotal</strong></td>
                                            <td class="text-right">
                                                <strong>
                                                    <span t-field="doc.amount_untaxed" style="font-size: 12px;"/>
                                                </strong>
                                            </td>
                                        </tr>
                                        <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                            <tr>
                                                <t t-if="amount_by_group[3] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                                    <td style="font-size: 12px;">
                                                        <span t-esc="amount_by_group[0]" style="font-size: 12px;"/>
                                                        <span style="font-size: 12px;">&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}' style="font-size: 12px;"/></span>
                                                    </td>
                                                    <td class="text-right o_price_total" style="font-size: 12px;">
                                                        <span t-esc="amount_by_group[1]"
                                                              t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}' style="font-size: 12px;"/>
                                                    </td>
                                                </t>
                                                <t t-else ="">
                                                    <td style="font-size: 12px;">
                                                        <span t-esc="amount_by_group[0]" style="font-size: 12px;"/>
                                                    </td>
                                                    <td class="text-right o_price_total" style="font-size: 12px;">
                                                        <span t-esc="amount_by_group[1]"
                                                              t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}' style="font-size: 12px;"/>
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                        <tr>
                                            <td style="font-size: 12px;"><strong>Total</strong></td>
                                            <td class="text-right">
                                                <strong>
                                                    <span t-field="doc.amount_total" style="font-size: 12px;"/>
                                                </strong>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <p t-if="doc.note">
                            <strong>Notes:</strong>
                            <span t-field="doc.note"/>
                        </p>
                        <p t-if="doc.payment_term_id.note">
                            <span t-field="doc.payment_term_id.note"/>
                        </p>
                        <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.sudo().note">
                            <strong>Fiscal Position Remark:</strong>
                            <span t-field="doc.fiscal_position_id.sudo().note"/>
                        </p>

                        <div t-if="doc.signature" class="mt32 ml16 mr16" name="signature">
                            <div class="offset-8">
                                <strong>Signature</strong>
                            </div>
                            <div class="offset-8">
                                <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                            </div>
                            <div class="offset-8 text-center">
                                <p t-field="doc.signed_by"/>
                            </div>
                        </div>

                        <div class="oe_structure"/>
                    </div>
                    </t>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
