<?xml version="1.0" encoding="UTF-8"?>
	<odoo>
		<data>
			<record id="vendor_portal_RFQ_tree" model="ir.ui.view">
				<field name="name">vendor.portal.tree</field>
				<field name="model">vendor.portal</field>
				 <field name="type">tree</field>
				<field eval="8" name="priority"/>
				<field name="arch" type="xml">
				<tree string="Vendor RFQ">
					<field name="name"/>
					<field name="product_id"/>
					<field name="estimated_quote"/>
					<field name="date_order"/>
					<field name="rfq_closing_date"/>
					<field name="state"/>
				</tree>
				</field>
			</record>

	        <record id="vendor_rfq_form" model="ir.ui.view">
	            <field name="name">vendor.portal.form</field>
	            <field name="model">vendor.portal</field>
	            <field name="arch" type="xml">
	                <form string="Request For Quotation">
	                <header>
	                	<button name="set_to_pending" string="Set To Pending" type="object" class="oe_highlight"/>
	                	<button name="cancel" string="Cancle" type="object" class="oe_highlight"/>
	                	<button name="create_po" string="Create Purchase Order" type="object" class="oe_highlight"/>
	                	<field name="state" widget="statusbar" statusbar_visible="draft,in progress,done" readonly="1"/>
	                </header>
	                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <span class="o_form_label" attrs="{'invisible': [('state','not in',('draft'))]}">Request for Quotation </span>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>

                    </div>
                    <group>
                        <group>
                        	<field name="product_id"/>
                        	<field name="product_qty"/>
	                        <field name="estimated_quote" attrs="{'invisible':['|', ('state', 'in', ('draft'))]}" options="{'no_create_edit': True}"/>
	                        <field name="estimated_delivery" attrs="{'invisible':['|', ('state', 'in', ('draft'))]}" options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                   			<field name="date_order"/>
							<field name="rfq_closing_date"/>
							<field name="vendor" attrs="{'invisible':['|', ('state', 'in', ('draft'))]}" options="{'no_create_edit': True}"/> 
                        </group>
                    </group>
                    <notebook>
	                    <page string="Vendor Quote">
		                    <field name="vendor_line" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}" options="{'no_create_edit': True}">
		                        <tree editable="bottom">
		                            <field name ="vendors" string="Vendor"/>
		                            <field name = "estimated_quote_by_vendor" string = "Estimated Quote"/>
		                            <field name ="estimated_date_by_vendor" string="Estimated Date"/>
		                            <field name="notes" string="Vendor Note"/>                          
		                        </tree>	                        
		                    </field>
		                   	</page>
		            </notebook>
                </sheet>
	            </form>
	           	</field>
	        </record>

	        <record id="sequence_vendor_portal" model="ir.sequence">
				<field name="name">Seq Portal</field>
				<field name="code">vendor.portal.name</field>
				<field name="prefix">RFQ</field>
				<field name="padding">6</field>
				<field name="company_id" eval="False"/>
			</record>

	        <record id="tree_view_vendor_portal_action" model="ir.actions.act_window">
		        <field name="name">Vendor RFQ</field>
		        <field name="res_model">vendor.portal</field>
		        <field name="view_mode">tree,form</field>
		        <field name="view_id" ref="vendor_portal_RFQ_tree"/>
		        <field name="help" type="html">
		          <p class="oe_view_nocontent_create">
		            Click to add a new tag.
		          </p>
		        </field>
		    </record>
	        
	        <menuitem id="vendor_portal_menu_root"
	            name="Vendor Portal"
		        sequence="3"
		        groups="base.group_user"/>
		    <menuitem id="menu_quotation" name="Vendor Quotation" action="vendor_portal_management.tree_view_vendor_portal_action" parent="vendor_portal_menu_root" sequence="1" />
		    <menuitem id="submenu_quotation" name="Vendor Quotations" action="vendor_portal_management.tree_view_vendor_portal_action" parent="menu_quotation" sequence="1" />
		    <menuitem id="menu_vendor_purchase" name="Purchase" action="base.action_partner_supplier_form" parent="vendor_portal_menu_root" sequence="2" />
		    <menuitem id="menu_rfq" name="Request For Quotation" parent="menu_vendor_purchase" action="purchase.purchase_rfq" sequence="2" />
		    <menuitem id="menu_vendors" name="Vendors" action="base.action_partner_supplier_form" parent="vendor_portal_menu_root" sequence="3" />
		    <menuitem id="menu_vendors1" name="Vendors" action="base.action_partner_supplier_form" parent="menu_vendors" sequence="1" />
		    <menuitem id="menu_configuration" name="Configuration" action="base.action_partner_supplier_form" parent="vendor_portal_menu_root" sequence="4" />
		    <menuitem id="menu_settings" name="settings" action="base.res_config_setting_act_window" parent="menu_configuration" sequence="1" />

			<record model="ir.ui.view" id="vendor_rfq_form_view_inherit">
		        <field name="name">vendor.portal.form</field>
		        <field name="model">vendor.portal</field>
		        <field name="inherit_id" ref="vendor_portal_management.vendor_rfq_form"/>
		        <field name="arch" type="xml">
		        <data>
		            <field name="rfq_closing_date" position="after">
		            <label for="select_vendor"/>
		            <div class="o_row" name="update_vendor">
		            <field name="select_vendor"
		            class="oe_inline" options="{'no_create_edit': True}"/>
		            <button string="Submit" type="object"
		            name="submit_button"
		            class="oe_highlight"/>
		            </div>
		        </field>
		        </data>        
		      </field>
	    	</record>
		</data>
</odoo>